<UserControl x:Class="Client.Utility.ChatBubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8"/>
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="BubbleBackg" Fill="#aaeb7b" RadiusX="10" RadiusY="10"/>

        <Canvas x:Name="BubblePointer" Grid.Column="1" Width="8" Height="12">
            <Polygon 
                Fill="#aaeb7b"
                StrokeThickness="1"
                Points="0,0 8,6 0,12" />
        </Canvas>
        <Canvas Grid.Column="1"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="188*"/>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="LabelTime" Content="00:00" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Padding="0,0,0,0" Margin="7,0,0,0" Height="17" Width="31"/>
            <TextBox 
                  x:Name="MessageTextBlock" 
                  HorizontalAlignment="Left" 
                  Margin="5,0,5,0" 
                  TextWrapping="Wrap" 
                  Text="测试消息" 
                  VerticalAlignment="Bottom" 
                  FontSize="16"
                  IsReadOnly="True"
                  Grid.Row="2"
                  Cursor="IBeam"
                  BorderThickness="0"
                  Background="Transparent"
                  Focusable="True"
                  Padding="0"
                  VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollBarVisibility="Disabled"/>
            <Image x:Name="ThumbnailImage"
                  Grid.Row="1" Margin="7,3,7,0"
                  Source="/Utility/4_avatar_20250321190730799295_1.jpg" 
                  Stretch="UniformToFill"
                  Loaded="ThumbnailImageLoaded"/>
            <Button x:Name="PlayButton" Grid.Row="1" Margin="7,3,7,0" Padding="0"
        Background="Transparent" BorderThickness="0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Grid Background="Transparent">
                                        <!-- 添加透明的 Rectangle，占满整个按钮区域 -->
                                        <Rectangle Fill="Transparent" />
                                        <!-- 将图片居中显示 -->
                                        <Image x:Name="PlayIcon" Source="/icon/play_icon_shallow.png"
                                   Width="40" Height="40" Stretch="Uniform" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="PlayIcon" Property="Source" Value="/icon/play_icon_deep.png"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Grid x:Name="ReplyContainer" Margin="5,3,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="16*"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="ReplyBackgr" Fill="#90db5a" RadiusX="8" RadiusY="8" Grid.RowSpan="2"/>
                <Label x:Name="ReplyNameLabel" Content="测试名字" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0,0,0,0" Margin="5,3,0,0" FontWeight="Bold"/>
                <Label x:Name="ReplyContentLabel" Content="测试内容" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Padding="0,0,0,0" FontSize="10" Margin="5,0,0,3"/>
            </Grid>
            <Grid Grid.Row="1" Margin="7,3,7,0" Cursor="">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="FileNameLabel" Grid.Column="1" Content="文件名" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="2,0,3,0" Margin="3,3,0,0" FontWeight="Bold"/>
                <Label x:Name="FileSizeLabel" Grid.Column="1" Content="1MB" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="2,0,3,0" Grid.Row="1" Margin="3,0,0,3" FontSize="10"/>
                <Image x:Name="FileImg" 
                       Grid.Column="0" 
                       Grid.Row="0" 
                       Grid.RowSpan="2" 
                       HorizontalAlignment="Center" 
                       Height="40" 
                       VerticalAlignment="Center" 
                       Width="40" Source="/Utility/file_icon.png"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>