<UserControl x:Class="Client.Utility.FriendItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:util="clr-namespace:Client.Utility"
             mc:Ignorable="d"
             MinHeight="50">
    <UserControl.Resources>
        <!-- 定义转换器资源 -->
        <util:OnlineToColorConverter x:Key="OnlineToColorConverter" />
        <util:OnlineToBorderColorConverter x:Key="OnlineToBorderColorConverter" />
        <util:UnreadToVisibilityConverter x:Key="UnreadToVisibilityConverter" />
        <util:UnreadToTimeVisibilityConverter x:Key="UnreadToTimeVisibilityConverter" />
        <util:TimeConverter x:Key="TimeConverter" />
    </UserControl.Resources>
    <Grid Margin="5" MouseLeftButtonDown="OnClick" Background="Transparent" Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- 头像容器 -->
        <Grid x:Name="AvatarContainer" Width="45" Height="45">
            <!-- 头像 -->
            <Image x:Name="AvatarImage" Width="40" Height="40" Stretch="UniformToFill">
                <Image.Clip>
                    <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20" />
                </Image.Clip>
            </Image>
            <!-- 头像边框 -->
            <Ellipse Width="40" Height="40" StrokeThickness="2" Stroke="{Binding IsOnline, Converter={StaticResource OnlineToBorderColorConverter}}" />
            <!-- 在线状态指示器 -->
            <Ellipse x:Name="StatusIndicator" Width="16" Height="16" Margin="29,29,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                     Fill="{Binding IsOnline, Converter={StaticResource OnlineToColorConverter}}">
                <Ellipse.Stroke>
                    <SolidColorBrush Color="White" />
                </Ellipse.Stroke>
                <Ellipse.StrokeThickness>2</Ellipse.StrokeThickness>
            </Ellipse>
        </Grid>

        <!-- 名称和消息区域 -->
        <StackPanel Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center">
            <TextBlock x:Name="NameTextBlock" FontFamily="Microsoft YaHei" FontSize="12" FontWeight="Bold"
                       Text="{Binding DisplayName}" Foreground="Black" MaxWidth="110" TextTrimming="CharacterEllipsis" />
            <!-- 改为 DisplayName -->
            <TextBlock x:Name="MessageTextBlock" FontFamily="Microsoft YaHei" FontSize="8"
                       Text="{Binding LastMessage}" Foreground="Black" TextTrimming="CharacterEllipsis" />
        </StackPanel>

        <!-- 未读徽标或时间 -->
        <Grid Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Ellipse x:Name="UnreadBadge" Width="15" Height="15" Fill="#f04e4e" Visibility="{Binding Unread, Converter={StaticResource UnreadToVisibilityConverter}}">
                <Ellipse.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.5" />
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock x:Name="UnreadText" FontFamily="Microsoft YaHei" FontSize="10" FontWeight="Bold"
                       Text="{Binding Unread}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Visibility="{Binding Unread, Converter={StaticResource UnreadToVisibilityConverter}}" />
            <TextBlock x:Name="TimeTextBlock" FontFamily="Microsoft YaHei" FontSize="8"
                       Text="{Binding LastMessageTime, Converter={StaticResource TimeConverter}}" Foreground="Black"
                       Width="40" TextAlignment="Right" Visibility="{Binding Unread, Converter={StaticResource UnreadToTimeVisibilityConverter}}" />
        </Grid>
    </Grid>
</UserControl>