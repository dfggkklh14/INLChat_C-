<Window x:Class="Client.Utility.ImageCropperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="裁切头像"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UtilityResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>

        <!-- 主画布：图片展示 + 半透明遮罩 -->
        <Canvas Name="MainCanvas" Background="Black"
            MouseDown="OnMouseDown"
            MouseMove="OnMouseMove"
            MouseUp="OnMouseUp"
            MouseWheel="OnMouseWheel"
            Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Image Name="SourceImage"
             Stretch="None"
             RenderOptions.BitmapScalingMode="HighQuality"
             IsHitTestVisible="False">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ImageScaleTransform"/>
                        <TranslateTransform x:Name="ImageTranslateTransform"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Rectangle Name="OverlayRect"
                 Fill="#80000000"
                 IsHitTestVisible="False"/>
        </Canvas>

        <!-- 裁切框 -->
        <Rectangle x:Name="CropRect"
               Stroke="White"
               StrokeDashArray="4 4"
               StrokeThickness="2"
               Fill="Transparent"
               Grid.Column="1" Grid.Row="1"
               IsHitTestVisible="False"/>

        <!-- 确认按钮 -->
        <Button Name="ConfirmButton"
            Content="确认"
            Click="ConfirmButton_Click"
            Grid.Row="2" Grid.Column="1"
            Height="30" Width="80"/>

        <!-- 加载遮罩 -->
        <Grid Name="LoadingOverlay"
          Background="#80000000"
          Visibility="Collapsed"
          Grid.RowSpan="3"
          Grid.ColumnSpan="3"
          IsHitTestVisible="False">
            <!-- 同步主Grid的布局结构 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="300*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="300*"/>
                    <RowDefinition Height="83*"/>
                </Grid.RowDefinitions>
                <Ellipse Grid.Column="1" Grid.Row="1"
                     Style="{StaticResource LoadingSpinnerStyle}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>