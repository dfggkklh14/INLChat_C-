<Window x:Class="Client.page.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.page"
        xmlns:utility="clr-namespace:Client.Utility"
        mc:Ignorable="d"
        Title="ChatWindow" 
        Height="500" 
        Width="550" 
        MinWidth="500" 
        MinHeight="550"
        Icon="pack://application:,,,/icon/icon.ico">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="247*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="144*"/>
        </Grid.RowDefinitions>
        <!-- FriendListControl 在第0列，第1行 -->
        <utility:FriendListControl x:Name="FriendList"
                                   Grid.Column="0"
                                   Grid.Row="1"
                                   FriendSelected="FriendList_FriendSelected"/>
    </Grid>
</Window>